{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@atomicfinance/*": ["packages/*/lib"]
    },
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true
  }
}
