{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2016"
    ],
    "outDir": "../out-tsc/spec",
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "",
    "types": [
      "mocha",
      "node"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  },
  "files": [
    "test.ts"
  ],
  "include": [
    "**/*.test.ts"
  ]
}
